<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/lighttexture"
    tools:context=".Reciept">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Order Receipt"
        android:textAlignment="center"
        android:textColor="#EDEAEA"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:text="Thank you for shopping with us! Please come back again!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#EDEAEA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/goHome"
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="30dp"
        android:text="Browse Some More"
        app:backgroundTint="#BA1313"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="283dp"
        android:layout_height="69dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="551dp" />

    <ListView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="308dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/goHome"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

</GridLayout>